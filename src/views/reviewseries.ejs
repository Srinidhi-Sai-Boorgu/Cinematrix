  <body>
    <%- include("../../utils/header") %> 

    <% if(data.User_Role=='Admin'){ %>

    <%- include("../../utils/admin_side") %>
  
    <% } %>

    <% if(data.User_Role=='User'){ %>

    <%- include("../../utils/side") %>
    
    <% } %>

    <main id="main" class="main" style="background-color:black">
      <div class="pagetitle">
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
          </ol>
        </nav>
      </div>

      <section class="section" style="color: white; background-color:black;">
        <div class="row">
          <div class="col-lg-12">
            <div class="card" style="overflow-x: auto; overflow-y:auto; color: white; background-color:black;">
              <div class="card-body" style="color: white; background-color:black;">
                <div style="display: flex; justify-content: center; width: 100%">
                  <h3 class="card-title" style="color: white; font-size: 1.5rem">Recent TV Shows</h3>
                </div>
                <div class="scrollbarclass" style="max-height: 400px; overflow-y: auto; overflow-x: auto;">
                  <table class="table table-striped table-dark text-nowrap table-responsive" style="color: white; background-color:black;">
                    <thead>
                      <tr>
                        <th scope="col">S.No.</th>
                        <th scope="col">Title</th>
                        <th scope="col">No of Seasons</th>
                        <th scope="col">Release Year</th>
                        <th scope="col">Rating</th>
                        <th scope="col">No. of Ratings</th>
                        <th scope="col"></th>
                        
                      </tr>
                    </thead>
  
                    <tbody>
                      <div>
                        <%let i=1; %> <% for (let dataobj of seriesdata){ %>
                          <tr>
                            <th scope="row"><%=i%></th>
                            <td><%=dataobj.Title%></td>
                            <td><%=dataobj.Number_Of_Seasons%></td>
                            <td><%=dataobj.Release_Year%></td>
                            <td><%=dataobj.TVShow_Rating%></td>
                            <td><%=dataobj.Num_Ratings_TV%></td>
                            <td>
                              <form
                                class="filter"
                                action="/view_tvshow_details/<%=dataobj.Show_ID%>"
                                method="get"
                              >
                                <input
                                  type="submit"
                                  class="btn btn-info"
                                  value="View Details"
                                />
                              </form>
                            </td>    
                          </tr>
                          <% i=i+1; }%>
                      </div>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include("../../utils/footer")%>

    <a
      href="#"
      class="back-to-top d-flex align-items-center justify-content-center"
      ><i class="bi bi-arrow-up-short"></i
    ></a>
    <script>
      function confirmDelete() {
        var result = confirm("Are you sure you want to delete this user?");
        return result;
      }
    </script>
