<body>

  <%- include("../../utils/header") %> 

    <% if(data.User_Role=='Admin'){ %>

    <%- include("../../utils/admin_side") %>
  
    <% } %>

    <% if(data.User_Role=='User'){ %>

    <%- include("../../utils/side") %>
    
    <% } %>
      
    <main id="main" class="main" style="background-color:black">
      <div class="pagetitle">
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
          </ol>
        </nav>
      </div>

    <section class="section profile">
      <div class="row" style="height: 33rem">
        <div class="col-xl-4">

          <div class="card" style="color:white ;background-color:black;">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center" >

              <h2 style="color: white;"><%=data.Username%></h2>
              <h5 class="pt-2 userrole" style="color: white; "><%=data.User_Role%></h5>
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card" style="color:white ;background-color:black;">
            <div class="card-body pt-3">
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profile</button>
                </li>
                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                </li>

              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                
                  <h5 class="card-title" style="color:white">Profile Details</h5>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Username</div>
                    <div class="col-lg-9 col-md-8" style="color:white"><%=data.Username %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">E-mail</div>
                    <div class="col-lg-9 col-md-8"><%=data.User_Mail %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Date Of Birth</div>
                    <div class="col-lg-9 col-md-8"><%=data.User_DOB %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Join Date</div>
                    <div class="col-lg-9 col-md-8"><%=data.User_Join_Date %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Last Online</div>
                    <div class="col-lg-9 col-md-8"><%=data.User_Last_Online %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Country</div>
                    <div class="col-lg-9 col-md-8"><%=data.User_Country %></div>
                  </div>
                  
                </div>

                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                  <form action="/update_profile" method="post">
                    <div class="row mb-3">

                    <div class="row mb-3">
                      <label for="fullName" class="col-md-4 col-lg-3 col-form-label" style="color:white">Username</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="name" type="text" class="form-control" id="fullName" value="<%=data.Username?data.Username:''%>">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="pass" class="col-md-4 col-lg-3 col-form-label" style="color:white">Password</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="pass" type="text" class="form-control" id="pass" placeholder="Enter new password">
                      </div>
                    </div>

                    <div class="text-center">
                      <input type="submit" class="btn btn-primary"></input> 
                    </div>
                  </form>

                </div>

              </div>

            </div>
          </div>

        </div>
      </div>
    </section>

  </main>

  <%- include("../../utils/footer"); %>  
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      if (window.location.hash === "#profile-edit") {
        var editTab = new bootstrap.Tab(document.querySelector('[data-bs-target="#profile-edit"]'));
        editTab.show();
      }
    });
  </script>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
