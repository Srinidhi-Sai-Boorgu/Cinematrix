<body>

  <%- include("../../utils/header") %> 

    <% if(data.User_Role=='Admin'){ %>

    <%- include("../../utils/admin_side") %>
  
    <% } %>

    <% if(data.User_Role=='User'){ %>

    <%- include("../../utils/side") %>
    
    <% } %>
      
    <main id="main" class="main" style="background-color:black">
      <div class="pagetitle">
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
          </ol>
        </nav>
      </div>

    <section class="section profile">
      <div class="row" style="height: 33rem">
        <div class="col-xl-4">

          <div class="card" style="color:white ;background-color:black;">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center" >

              <h2 style="color: white;"><%=userdata.Username%></h2>
              <h5 class="pt-2 userrole" style="color: white; "><%=userdata.User_Role%></h5>
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card" style="color:white ;background-color:black;">
            <div class="card-body pt-3">
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profile</button>
                </li>

              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                
                  <h5 class="card-title" style="color:white">Profile Details</h5>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Username</div>
                    <div class="col-lg-9 col-md-8" style="color:white"><%=userdata.Username %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">E-mail</div>
                    <div class="col-lg-9 col-md-8"><%=userdata.User_Mail %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Date Of Birth</div>
                    <div class="col-lg-9 col-md-8"><%=userdata.User_DOB %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Join Date</div>
                    <div class="col-lg-9 col-md-8"><%=userdata.User_Join_Date %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Last Online</div>
                    <div class="col-lg-9 col-md-8"><%=userdata.User_Last_Online %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label" style="color:white">Country</div>
                    <div class="col-lg-9 col-md-8"><%=userdata.User_Country %></div>
                  </div>

                </div>

              </div>

            </div>
          </div>

        </div>
      </div>
    </section>

  </main>

